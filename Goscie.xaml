<Page x:Class="GUIProjekt.Goscie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUIProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      Title="Goscie">

    <Grid x:Name="pagePokoje" Margin="0,0,0,-0.4">
        <ListBox x:Name="lst_Goscie" HorizontalAlignment="Left" Height="455" VerticalAlignment="Top" Width="790" Margin="0,105,0,0" Background="#FFB6B6B6"/>
        <Button x:Name="btn_DodajGoscia" BorderBrush="Black" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="45" Click="btn_DodajGoscia_Click" Margin="0,5,0,0" Background="#FF3C5A3C" FontWeight="Bold" FontFamily="Arial"/>
        <Button x:Name="btn_UsunGoscia" BorderBrush="Black" Content="Usuń" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="45" Margin="0,55,0,0" Click="btn_UsunGoscia_Click" Background="#FF3C5A3C" FontWeight="Bold" FontFamily="Arial"/>
        <Label Content="Panel zarządzania Gośćmi" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="165,5,0,0" Height="95" Width="625" FontWeight="Bold" FontSize="36" Background="#FF489447" FontFamily="Arial"/>
    </Grid>
</Page>
